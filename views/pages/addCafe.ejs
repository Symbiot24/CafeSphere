<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-2">
    <h1 class="col-8 offset-3">Add your Cafe</h1>
    <div class="col-8 offset-3">
        <form action="/cafe/new" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="cafeName" class="form-label">Cafe Name</label>
                <input type="text" name="cafeName" class="form-control" required>
                <div class="valid-feedback">Looks good</div>
            </div>
            <div class="mb-3">
                <label for="ownerName" class="form-label">Owner Name</label>
                <input type="text" name="ownerName" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Link/URL</label>
                <input type="text" name="image" class="form-control">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" name="city" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="contactNo" class="form-label">ContactNo</label>
                <input type="text" name="contactNo" class="form-control" required>
            </div>
            <button class="btn btn-outline-dark">Add Cafe</button>
        </form>
    </div>

</div>