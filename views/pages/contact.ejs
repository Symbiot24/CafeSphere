    <% layout("/layouts/boilerplate.ejs") %>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet"/>
    <link rel="stylesheet" href="css/contact.css">
    <div class="containere row">
        <div class="left-section">
            <img src="https://images.unsplash.com/photo-1603585514260-3500b8a9a6a9?q=80&w=3024&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Nature Image" class="background-img">
            <div class="branding">
                <h1>CafeSphere</h1>
                <div class="social-icons">
                    <a href="#"><i class="ri-telegram-2-line"></i></a>
                    <a href="#"><i class="ri-twitter-x-fill"></i></a>
                    <a href="#"><i class="ri-facebook-circle-line"></i></a>
                    <a href="#"><i class="ri-linkedin-box-line"></i></a>
                </div>
            </div>
        </div>
        <div class="right-section">
            <h2>Get In <span>Touch</span></h2>
            <p>24/7 We will answer your questions and help improve our services based on your suggestions.</p>
            <form action="#">
                <div class="form-group">
                    <span class="icon"><i class="ri-user-line"></i></span>
                    <input type="text" id="name" placeholder="Full Name">
                </div>
                <div class="form-group">
                    <span class="icon"><i class="ri-mail-line"></i></span>
                    <input type="email" id="email" placeholder="Email">
                </div>
                <div class="form-group last-div">
                    <span class="icon1"><i class="ri-message-3-line"></i></span>
                    <textarea id="message" placeholder="Send your Message"></textarea>
                </div>
                <button type="submit" class="send-btn">Send Now</button>
            </form>
        </div>
    </div>
