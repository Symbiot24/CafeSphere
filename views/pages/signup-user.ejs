<div class="box row">
    <h1 class="upper col-10 offset-4 mt-3">Register Now and</h1>
    <h1 class="col-10 offset-4"> &nbsp; &nbsp;&nbsp;Enjoy with us</h1>
    <div class="row col-8 offset-3">

    <form action="/signup" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <select class="form-select selecte" name="option" id="">
                <option value="user">User</option>
                <option value="cafeowner">Cafe Owner</option>
             </select>
        </div>
         
         <div class="mb-3">
            <input type="text" placeholder=" Username :" name="username" class="form-control" required>
         </div>
       
        <div class="mb-3">
            <input placeholder=" Contact Number :" name="contactNo" class="form-control" required>
        </div>

        <div class="mb-3">
            <input type="email" placeholder=" Email :" name="email" class="form-control" required>
        </div>
        
        <div class="mb-3">
            <input type="password" placeholder=" Password :" name="password" class="form-control" required>
        </div>

        <div class="mb-3">
            <input type="text" placeholder=" Address :" name="address" class="form-control" required>
        </div>
       
        <button class="btn btn-outline-dark">Register</button>
    </form>
</div>

    <a href="" style="font-size: 12px;" class="col-10 offset-6">Already have an account ?</a>
</div>



