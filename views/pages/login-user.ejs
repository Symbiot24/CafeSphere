    <% layout("/layouts/boilerplate.ejs") %>
    <div class="box-2">
        <div class="box-3">

        </div>
    </div>

    <div class="box-1 row col-8 offset-3 mt-3">
        <h1>Welcome Cafesphere</h1>
        <form id="loginForm" action="/login/user" method="POST" class="needs-validation" novalidate>
            
            <div class="mb-3">
                <select class="form-select selecte email" name="option" id="role">
                    <option value="user">User</option>
                    <option value="cafeowner">Cafe Owner</option>
                 </select>
            </div>

            <div class="mb-3">
                <input type="text" placeholder="Username :" class="email form-control" name="username"  required>
            </div>
           
            <div class="mb-3">
                <input type="password" placeholder="Password :" class="email form-control" name="password" required>
            </div>

            
            <button class="btn btn-outline-dark">Login</button>
        </form>
            <div class="box-1-tags row offset-3 mt-3">
                <a class="col-md-2" href="" style="text-decoration: none; color: black;">Sign up</a>
                <a class="col-md-6" href="" style="text-decoration: none; color: black;">Forgot password ?</a>
            </div>
        
    </div>
    <script>
        // JavaScript to update the form action dynamically
        const roleSelect = document.getElementById('role');
        const loginForm = document.getElementById('loginForm');
    
        roleSelect.addEventListener('change', () => {
          const selectedRole = roleSelect.value;
          // Update the form action based on the selected role
          loginForm.action = selectedRole === 'user' ? '/login/user' : '/login/cafeowner';
        });
      </script>